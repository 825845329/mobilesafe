<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fjnade="http://schemas.android.com/apk/res/com.example.administrator.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResAuto">

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a3ea69"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="手机防盗"
        android:textSize="26sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_safe"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="5566"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            />

        <View
            android:layout_below="@+id/tv_safe"
            android:background="#beb7b7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_protect"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放到保护是否开启"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock"
            android:layout_alignParentRight="true"
            />

        <View
            android:layout_below="@+id/tv_protect"
            android:background="#beb7b7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


        <TextView
            android:id="@+id/tv_again"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="重新进入设置向导"
            android:textSize="20sp"
            />

        <View
            android:background="#beb7b7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


    <TextView
        android:textColor="#000"
        android:text="功能简介"
        android:paddingBottom="5dp"
        android:background="#868080"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#000"
        android:text="GPS追踪：#location*#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:textColor="#000"
        android:text="播放报警音乐：#alarm*#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:textColor="#000"
        android:text="远程删除数据GPS追踪：#wipedata*#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:clickable="true"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:textColor="#000"
        android:text="远程锁屏：#lockscreen*#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:drawableLeft="@android:drawable/star_big_on"
        />

</LinearLayout>