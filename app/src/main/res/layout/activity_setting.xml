<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fjnade="http://schemas.android.com/apk/res/com.example.administrator.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResAuto">

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a3ea69"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="设置中心"
        android:textSize="26sp" />

  <ui.SettingView
      android:id="@+id/activity_setting"
      fjnade:title = "提示更新"
      fjnade:desc_on = "开启提示更新"
      fjnade:desc_off = "关闭提示更新"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <ui.SettingClickView
        android:id="@+id/scv_setting_changedbg"
        fjnade:title = "提示更新"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ui.SettingClickView
        android:id="@+id/scv_setting_location"
        fjnade:title = "归属地提示框位置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>