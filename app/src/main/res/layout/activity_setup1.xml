<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fjnade="http://schemas.android.com/apk/res/com.example.administrator.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResAuto">

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a3ea69"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="1、欢迎进入手机防盗设备"
        android:textSize="26sp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="您的手机防盗卫士:"
    android:layout_margin="5dp"
    android:textSize="26sp"
    />

    <TextView
        android:text="sim卡变更报警"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:text="GPS追踪"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:text="远程数据销毁"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:clickable="true"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:text="远程锁屏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setup1"
            />


        <Button
            android:id="@+id/btn_set1"
            android:text="下一步"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/next"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</LinearLayout>